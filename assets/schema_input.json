{
    "$schema": "http://json-schema.org/draft-07/schema",
    "$id": "https://raw.githubusercontent.com/lfreitasl/hybrider/master/assets/schema_input.json",
    "title": "lfreitasl/hybrider pipeline - params.input schema",
    "description": "Schema for the file provided with params.input",
    "type": "array",
    "items": {
        "type": "object",
        "properties": {
            "vcfs": {
                "type": "string",
                "pattern": "^\\S+\\.vcf$",
                "errorMessage": "VCF file must have the '.vcf' extension"
            }
        },
        "required": ["vcfs"]
    }
}
